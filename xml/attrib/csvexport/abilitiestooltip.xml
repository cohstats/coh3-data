<tuningtemplate csvfilename = "abilitiestooltip.csv" template="abilities" pathregex="^abilities" createnewlocstringsonimport="true" exportlocstringastext="true">
	<columns>
		<attribute columnname="screen_name">
			<query name="default">
				<query name="ability_bag">
					<query name="ui_info">
						<value name="screen_name" />
					</query>
				</query>
			</query>
		</attribute>
				<attribute columnname="screen_name_alt">
			<query name="default">
				<query name="ability_bag">
					<query name="ui_info">
						<value name="screen_name_alternate" />
					</query>
				</query>
			</query>
		</attribute>
		<attribute columnname="extra_text">
			<query name="default">
				<query name="ability_bag">
					<query name="ui_info">
						<value name="extra_text" />
					</query>
				</query>
			</query>
		</attribute>
		<attribute columnname="brief_text">
			<query name="default">
				<query name="ability_bag">
					<query name="ui_info">
						<value name="brief_text" />
					</query>
				</query>
			</query>
		</attribute>
		<attribute columnname="help_text">
			<query name="default">
				<query name="ability_bag">
					<query name="ui_info">
						<value name="help_text" />
					</query>
				</query>
			</query>
		</attribute>
	</columns>
</tuningtemplate>